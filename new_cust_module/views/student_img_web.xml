<odoo>
    <data>
        <record id="student_res_reg_page_menu" model="website.menu">
            <field name="name">student Res Partner Registration</field>
            <field name="url">/school/student_registration_new</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">13</field>
        </record>


        <template id="student_new_reg_page_template">
            <link rel="stylesheet" type="text/css" href="/twyllo_internationals/static/src/css/student_reg.css"/>
            <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@mdi/font@6.5.95/css/materialdesignicons.min.css"/>
            <body>
                <div class="container" id="enquiry-form">
                    <div class="enquirybox">
                        <h1 class="title">Student Registration</h1>
                        <form role="form" action="/school/student_registration/submitted" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-grp">
                                <i class="mdi mdi-account-outline"></i>
                                <input type="text" name="name" id="name" placeholder="Name" required="required"/>
                            </div>
                            <div class="form-grp">
                                <i class="mdi mdi-email-outline"></i>
                                <input name="dob" type="date" id="dob" placeholder="Date of Birth" required="required"/>
                            </div>
                            <div class="form-grp">
                                <i class="mdi mdi-cellphone"></i>
                                <input type="text" name="classes" id="classes" placeholder="Class" required="required"/>
                            </div>
                            <div class="form-grp">
                                <i class="mdi mdi-image"></i>
                                <input type="file" id="image" name="image" accept="image/*"/>
                            </div>
                            <div class="btn-grp">
                                <input type="submit" value="SUBMIT" class="submit-btn"/>
                            </div>
                        </form>
                    </div>
                </div>
            </body>
        </template>
    </data>
</odoo>
